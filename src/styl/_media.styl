// 	.about-us__img
// 		width 380px
		
+max-screen(350px)
	.title-bottom
		font-size 41px
		
	.header-tools
		display flex
		flex-direction column
		justify-content flex-end
		
		.ic-link
			margin-right 0
			margin-bottom 10px
			&:last-child
				margin-bottom 0
	
			
		
	