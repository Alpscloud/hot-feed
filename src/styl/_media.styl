// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/
+max-screen(1620px)
	.promo-img
		max-width 980px
+max-screen(1440px)
	// Promo
	.sect__promo
		min-height 765px
		&:after
			height 175px
		
	.promo-img
		max-width 880px
		
	.title
		margin-bottom 40px
		&-bottom
			font-size 87px
			
	// Masks
	.mask-block
		&__chat
			mask-image url('../img/decor/masks/laptop/chat-mask.svg')
			
		&__earnings
			mask-image url('../img/decor/masks/laptop/earnings-mask.svg')
		

		&__join-as-fan
			mask-image url('../img/decor/masks/laptop/adult-show-mask.svg')
			
	.sect-entry
		&__chat
			min-height 569px
		&__earnings
			min-height 522px
		&__join-as-fan
			min-height 514px
			
	.sect__chat 
		.icons-blocks__row
			margin-bottom 110px
			
	.sect__join-as-fan
		padding-bottom 150px
			
+max-screen(1200px)
	.container
		padding-left 20px
		padding-right 20px
		
	.row-gutters
		margin-left -20px
		margin-right -20px
		&-lg
			margin-left -15px
			margin-right -15px
		
	.col-gutters
		padding-left 20px
		padding-right 20px
		
		&-lg
			padding-left 15px
			padding-right 15px
		
	.sect-content__img
		left -20px
		

	.promo-img
		max-width 780px
		
	// Joins as fan
	.sect__join-as-fan
		.sect-content-block__text
			padding-top 55px
			
	.sect-title__row 
		.sect-title
			margin-right 50px
			

		

+max-screen(1100px)
	.gutter-left
		padding-left 0
	// About
	.about-us
		&__img
			position relative
			transform none
			left auto
			top auto
			right auto
			margin 0 auto 100px auto
			
			
			img
				margin 0 auto
	.sect__about
		padding 20px 0 115px
		.sect-content-block
			max-width 100%
		

+max-screen(1000px)
	.header
		padding 20px 0
		
		.logo
			font-size 13px
			img
				max-width 20px
				margin-right 14px
				
	.promo
		&-img
			max-width none
			width 940px
			
		&-block
			padding-left 60px
		
	.sect__promo
		min-height 790px
		padding-top 220px
		padding-bottom 130px
		
	.sect__about
		padding-top 100px
		
	// Sect chat
	.sect__chat
		.icons-blocks__row
			margin-bottom 55px
			.ic-block__wrapper
				width 50%
				padding-bottom 55px
				
	.ic-block
		font-size 14px
		&__title
			font-size 21px
			margin-bottom 8px
			

	// Joins as fan

	.sect-content-block__text
		max-width 450px
		
	.chat-phrase
		
		&:nth-child(odd)
			padding-right 43px
		&:nth-child(even)
			padding-left 43px
		
+max-screen(900px)
	// Joins as fan

	.sect-content-block__text
		max-width 350px
	

	.sect-content__img
		width 500px
		top -190px

+max-screen(769px)
	.sect-entry
		&__earnings,
		&__join-as-fan
			min-height 482px
			
		&__chat
			min-height 436px
			
			
	.mask-block
		&__chat
			mask-image url('../img/decor/masks/tablet/chat-mask.svg')
			
		&__earnings
			mask-image url('../img/decor/masks/tablet/earnings-mask.svg')
		

		&__join-as-fan
			mask-image url('../img/decor/masks/tablet/adult-show-mask.svg')
					
+max-screen(767px)
	.promo-block
		padding-left 0
		
	.promo-img
		right auto
		horisontal-center()
		
	.sect-content-block__text
		max-width 100% !important
		
	.sect-content
		&__row 
			.sect-content-block
				max-width 100%
		&__img
			position relative
			top auto
			left auto
			width 100%
			width 610px
			transform none
			margin-left -20px
			
	.sect__join-as-fan 
		.sect-content-block__text
			padding-top 0
			
	.sect__join-as-fan,
	.sect__earnings
		.sect-content-block
			margin-top -230px
			

	.gallery-btns__row
		flex-direction column
		

		.or
			margin 10px 0
			font-size 15px
			

		 
		
+max-screen(700px)
	.sect__promo
		padding-top 330px
		min-height 770px
		&:after
			height 125px
		
	.title
		margin-bottom 0px
		&-top
			font-size 26px
			padding-left 30px
			&:before
				width 26px
				height 26px
				background-size contain
		&-bottom
			font-size 52px
			line-height 63px
			
		&-accent
			padding 5px
			border-radius 3px
			margin-left 8px
			
	.promo-img
		width 890px
			
	.promo-block
		&__text
			font-size 16px
			line-height 28px
			margin-bottom 65px
			
	.sect-title
		font-size 36px
		line-height 36px
		margin-bottom 25px
		span
			display block
		
	.sect-subtitle
		font-size 16px
		margin-bottom 38px
	
	.chat-phrases
		padding-bottom 0
		
	.chat-phrase
		max-width 225px
		margin-bottom 10px
		white-space nowrap
		&:nth-child(odd)
			padding-right 28px
		&:nth-child(even)
			padding-left 28px
		&__text
			font-size 10.76px
			line-height 13px
			padding 14px
		&__avatar
			width 23px
			height 23px
			border-radius 7.4px
			border-width 1.35px
			margin-right 5px
			
	// About
	.sect__about
		padding-bottom 75px
		
	.logo-block-title
		margin-bottom 30px
		
	.content
		font-size 14px
		line-height 21px
		
		h4
			font-size 18px
			margin-bottom 15px
			
		h3
			margin-bottom 30px
			

	// Get closer
	.get-closer__row
		flex-wrap wrap
		
		.sect-content-block
			max-width 100%
			order 2
			margin-right 0
			margin-top 50px
			
	.chat-card-img
		max-width 100%
		flex none
		width 100%
		img
			width 100%
			

	.sect__chat
		.icons-blocks__row
			margin-bottom 100px
			.ic-block__wrapper
				width 100%
				padding-bottom 0
				margin-bottom 50px
				&:last-child
					margin-bottom 0
	
	.ic-block__title
		font-size 24px
		
	.ic-single
		width 26px
		height 26px
		margin-bottom 0
		
	.ic-block 
		.ic
			margin-bottom 0
			
		&__wrapper
			width 100%
			padding-bottom 0
			margin-bottom 50px
			&:last-child
				margin-bottom 0
				

	.gallery-item__wrapper
		width 33.3333%
		padding 2px
		&:last-child,
		&:nth-last-child(-n+2)
			display none
			
	.sect-content__row
		margin-bottom 70px
		
	// Footer
	.footer-col
		width 100%
		padding-bottom 0
		margin-bottom 65px
		text-align center
		&:last-child
			margin-bottom 0
			
	.footer
		padding 110px 0 20px
		&:before
			height 80px

		.logo
			display inline-block
			img
				display block
				margin 0 auto 25px auto
				max-width 40px
				
		&-nav
			margin-top 25px
				
	.disclaimer
		font-size 12px
		p
			display flex
			align-items center
			b, strong
				text-transform uppercase
				display inline-block
				margin-right 20px
				
	.copyright
		font-size 12px
		
	.sect__gallery
		padding-bottom 15px
		
	.sect-title__row
		flex-wrap wrap
		
		.sect-title
			max-width none
			width 100%
			margin-right 0
			margin-bottom 30px
			font-size 31px
			line-height 38px
			
	.sect-entry__chat 
		.sect-title__row
			padding-top 85px
			

			
+max-screen(480px)
	.promo-block
		.btn
			width 100%
			padding-left 15px
			padding-right 15px
			
	.btn
		width 100%
		padding-left 15px
		padding-right 15px
		&-widest
			max-width 100%
			
	// About

	.about-us__img
		margin-bottom 70px
		
	.sect-content__img
		width 440px
		margin-bottom 30px
		
	.sect__earnings,
	.sect__join-as-fan 
		.sect-content-block
			margin-top -210px
		
		
+max-screen(421px)
	.sect-entry__earnings,
	.sect-entry__join-as-fan
		min-height 499px
			
	.sect-entry__chat
		min-height 380px
			
			
	.mask-block
		&__chat
			mask-image url('../img/decor/masks/phone/chat-mask.svg')
			
		&__earnings
			mask-image url('../img/decor/masks/phone/earnings-mask.svg')
		

		&__join-as-fan
			mask-image url('../img/decor/masks/phone/adult-show-mask.svg')
	

	.sect-entry__chat 
		.sect-title__row
			padding-top 60px
			
	.chat-phrase
		font-size 11px
		&__text
			padding 15px
			
	.footer
		&:before
			height 54px
			background-image url('../img/decor/footer-wave-mobile.svg')
			
+max-screen(400px)
	// Promo
		
	.title
		&-top
			font-size 26px
		&-bottom
			font-size 45px
			
