// ========== ========== G L O B A L   S T Y L E S ========== ==========
html
	text-size-adjust none
	box-sizing border-box
	&.is-fixed
		overflow hidden
	
*
	padding 0
	margin 0
	box-sizing inherit
	&:after,
	&:before
		box-sizing inherit


body
	font 16px $Reg
	line-height 1.45
	overflow-x hidden
	min-width 320px
	height 100%
	opacity 1
	position relative
	color $text-color
	background-color $body-bg

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input,
textarea
	outline none
	background transparent
	border none
	box-shadow none
	transition all .17s ease-in-out
	&:focus
		outline none
		
textarea
	resize vertical
	width 100%
	
select
	appearance none
	-webkit-appearance none
	-moz-appearance none
	transition all .17s ease-in-out
	cursor pointer
	&:focus
		outline none

a
	text-decoration none
	outline none
	transition all .17s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer
	transition all .17s ease-in-out
	background transparent
	&:focus
		outline none

img
	max-width 100%
	height auto
	

// ========== ========== ========== ========== ========== ==========

// ========== ========== M A I N   S T Y L E S ========== ==========

.disable-hover,
.disable-hover * 
	pointer-events none !important

.clearfix:before,
.clearfix:after
	content " "
	display table

.clearfix:after
	clear both

.gutters
	padding $gutters
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%
	
.sect
	&-title
		color $basic-white-color
		font 40px $Bold
		line-height 49px
		margin-bottom 25px
		&__row
			.sect-title
				max-width 230px
				margin-right 100px
				margin-bottom 0
				
	&-subtitle
		font-size 18px
		margin-bottom 55px
		
	&-description
		color $light-text-color
		max-width 520px
		line-height 150%
	
	&-content-block
		position relative
		max-width 440px
		&.gutter-left
			max-width 510px
		
		.content
			margin-bottom 30px
			&:last-child
				margin-bottom 0
	
		
.gutter-left
	padding-left 70px
	


.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.dark-bg
	background-color $dark-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden



.content
	font-size 18px
	line-height 22px
	*
		&:last-child
			margin-bottom 0
			
	h3
		font 36px $Bold
		color $basic-black-color
		line-height 36px
		margin-bottom 35px
		
			
	p
		margin-bottom 30px
		
	h4
		font-family $Med
		line-height 36px
		font-size 21px
		margin-bottom 19px
		

.secondary-color-title
	color $secondary-color
	background -webkit-linear-gradient(#5071E6 0%, #5068E9 100%)
	background -o-linear-gradient(#5071E6 0%, #5068E9 100%)
	background linear-gradient(#5071E6 0%, #5068E9 100%)
	-webkit-background-clip text
	-webkit-text-fill-color transparent
	
.accent-color-title
	color $accent-color
	

