.btn
	display inline-block
	text-align center
	border-radius 8px
	padding 15px 30px
	transition all .17s ease-in-out
	backface-visibility hidden
	box-shadow 0px 10px 40px rgba(151, 40, 80, 0.47)
	font-size 17px
	font-bold()
	text-transform uppercase
	color $basic-white-color
	// radius-overflow()
	position relative
	overflow hidden
	&:before,
	&:after
		pseudo()
		position absolute
		position-center()
		width 100%
		height 100%
		transition opacity .17s ease-in-out
		border-radius 8px
	&:before
		background #6260E8
		background -webkit-linear-gradient(327deg, #6260E8 0%, #9E4BD2 41.92%, #E93C3A 100.61%)
		background -o-linear-gradient(327deg, #6260E8 0%, #9E4BD2 41.92%, #E93C3A 100.6%1)
		background linear-gradient(57deg, #6260E8 0%, #9E4BD2 41.92%, #E93C3A 100.61%)
	&:after
		background -webkit-linear-gradient(354deg, #506EE7 -12.59%, #9E4BD2 55.02%, #DC2A6B 107.48%)
		background -o-linear-gradient(354deg, #506EE7 -12.59%, #9E4BD2 55.02%, #DC2A6B 107.48%)
		background linear-gradient(84deg, #506EE7 -12.59%, #9E4BD2 55.02%, #DC2A6B 107.48%)
		z-index 1
		opacity 0
		visibility hidden
		
	&:hover
		box-shadow 0px 3px 16px rgba(98, 96, 232, 0.33)
		&:after
			opacity 1
			visibility visible
		
	span
		display block
		position relative
		z-index 2
		
		
		
	&-transparent
		color #CC4174
		box-shadow 0px 2px 4px rgba(204, 65, 116, 0.28)
		&:after
			background $basic-white-color
			opacity 1
			visibility visible
			width calc(100% - 4px)
			height calc(100% - 4px)
			border-radius 7px
			box-shadow inset 2px 4px 7px rgba(204, 65, 116, 0.28)
			
		&:hover
			color #9E4BD2
			box-shadow 0px 2px 4px rgba(204, 65, 116, 0.28)
			&:before
				background -webkit-linear-gradient(354deg, #506EE7 -12.59%, #9E4BD2 55.02%, #DC2A6B 107.48%)
				background -o-linear-gradient(354deg, #506EE7 -12.59%, #9E4BD2 55.02%, #DC2A6B 107.48%)
				background linear-gradient(84deg, #506EE7 -12.59%, #9E4BD2 55.02%, #DC2A6B 107.48%)
		
		
		
		
	&-secondary-gradient
		box-shadow 0px 10px 20px rgba(169, 42, 164, 0.3)
		&:before
			background #9E4BD2
			background -webkit-linear-gradient(2deg, #9E4BD2 0%, #FF370C 100.61%)
			background -o-linear-gradient(2deg, #9E4BD2 0%, #FF370C 100.61%)
			background linear-gradient(92deg, #9E4BD2 0%, #FF370C 100.61%)	
		&:after
			background #6260E8
			background -webkit-linear-gradient(2deg, #6260E8 0%, #9E4BD2 41.92%, #E93C3A 100.61%)
			background -o-linear-gradient(2deg, #6260E8 0%, #9E4BD2 41.92%, #E93C3A 100.61%)
			background linear-gradient(92deg, #6260E8 0%, #9E4BD2 41.92%, #E93C3A 100.61%)
		
	&-lg
		padding 22px 83px
		
	&-wide
		padding 18px 63px
		
	&-widest
		width 100%
		max-width 300px
		padding 18px 20px
		// &.btn-transparent
		// 	padding 2px
		// 	span
		// 		padding 16px 18px
			
		
		
	&-with-ic
		text-transform none
		font-semibold()
		span
			display inline-block
			padding-left 25px
			&:before
				pseudo()
				position absolute
				left 0
				vertical-center()
				width 14px
				height 14px
				background-repeat no-repeat
				background-size 14px 14px
				background-position 50% 50%
			
		&__account
			span
				&:before
					background-image url('../img/icons/svg/account.svg')
			
	
		
	&__search
		&::-ms-clear
			display none 
			width 0
			height 0
		&::-ms-reveal
			display none 
			width 0
			height 0
		
		&::-webkit-search-decoration,
		&::-webkit-search-cancel-button,
		&::-webkit-search-results-button,
		&::-webkit-search-results-decoration
			display none
		
	&__top
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background-color $accent-color
		z-index 10
		text-align center
		transition all .17s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($basic-black-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $basic-black-color
			border-right 1px solid $basic-black-color
			transition all .23s ease-in-out
		&:hover
			background-color $dark-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $accent-color
				border-right 1px solid $accent-color
		

	&__hamburger
		display inline-block
		flex none
		width 50px
		height 50px
		border-radius 50%
		background-color $accent-color
		position relative
		transition background-color .17s ease-in-out
		margin-left 15px
		&--line
			width 27px
			height 2px
			background-color $basic-black-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&.is-active
			.btn__hamburger--line
				&:nth-child(1)
					transform translateY(8px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-8px) rotate(-45deg)
		