.ic
	display inline-block
	background-position 50% 50%
	background-repeat no-repeat
	position relative
	&-single
		width 34px
		height 34px
		background-size contain
		
		&-chat
			background-image url('../img/icons/chat.png')
		&-unique
			background-image url('../img/icons/unique.png')
		&-security
			background-image url('../img/icons/security.png')
		&-bots
			background-image url('../img/icons/bot.png')
			
			

	&-figure
		width 76px
		height 76px
		background-size 34px 34px
		background-position left 22px top 24px
		background-color $basic-white-color
		box-shadow 0px 0px 20px rgba(37, 75, 172, 0.08)
		border-radius 37px 37px 37px 5px
		
		&-star
			background-image url('../img/icons/star.png')
			background-size 32px 32px
		&-shield
			background-image url('../img/icons/shield.png')
			background-size 32px 37px
		&-bomb
			background-image url('../img/icons/bomb.png')
			background-size 33px 33px
			
		&-cash
			background-image url('../img/icons/cash.png')
			background-size 37px 27px
			background-position left 19px top 30px
		&-people
			background-image url('../img/icons/people.png')
			background-size 39px 32px
			background-position left 17px top 27px
		&-hand
			background-image url('../img/icons/hand.png')
			background-size 31px 33px
			background-position left 22px top 27px
		&-fire
			background-image url('../img/icons/fire.png')
			background-size 23px 27px
			background-position left 22px top 27px
		

			
.ic-block
	font-size 15px
	line-height 140%
	.ic
		margin-bottom 15px
	&__title
		font-size 24px 
		font-bold()
		color $basic-black-color
		margin-bottom 7px
		line-height 150%
		

.ic-link
	display inline-block
	position relative
	padding-left 21px
	color $basic-white-color 
	font 14px $SFReg
	letter-spacing -0.408px
	&__ic
		display inline-block
		position absolute
		left 0
		vertical-center()
		width 14px
		height 14px
		
	&:hover
		color $accent-color
		svg
			fill $accent-color
		
	svg
		svg()
		fill $basic-white-color
		

// Masks

.mask-block
	overflow hidden
	width 100%
	position absolute
	top 0
	left 0
	z-index -1
	height 100%

	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
		
	&__chat
		mask-image url('../img/decor/masks/desktop/chat-mask.svg')
		
		mask-size cover
		mask-repeat no-repeat
		
		
	&__join-as-fan
		mask-image url('../img/decor/masks/desktop/adult-show-mask.svg')
	
		mask-size cover
		mask-repeat no-repeat
		
		
			
	&__earnings
		mask-image url('../img/decor/masks/desktop/earnings-mask.svg')

		mask-size cover
		mask-repeat no-repeat
		
	
.sect-entry
	position relative
	display flex
	align-items center
	.container
		position relative
		z-index 2
	&__chat
		min-height 570px
		
		.sect-title
			max-width 190px
			margin-right 50px
			
			&__row
				padding-top 55px
			

	&__join-as-fan
		min-height 514px
		
	&__earnings
		min-height 514px
		

.socials
	font-size 0
	height 20px
	&__item
		display inline-block
		margin-right 10px
		&:last-child
			margin-right 0
	&__link
		display block
		width 20px
		height 20px
		&--ic
			display block
			width 100%
			height 100%
		svg
			svg()
			fill $basic-white-color
		&:hover
			svg
				fill #B1BCE1
				

.emoji
	&:before
		content ''
		display inline-block
		vertical-align middle
		transform translateY(-1px)
		width 16px
		height 16px
		background-size contain
		background-position 50% 50%
		background-repeat no-repeat
	&-kiss
		&:before
			background-image url('../img/icons/svg/emoji/kiss.png')
	&-devil
		&:before
			background-image url('../img/icons/svg/emoji/devil.png')
	&-peach
		&:before
			background-image url('../img/icons/svg/emoji/peach.png')
	&-fire
		
		&:before
			width 46px
			background-image url('../img/icons/svg/emoji/fire.png')
		