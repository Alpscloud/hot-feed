.ic
	display inline-block
	background-position 50% 50%
	background-repeat no-repeat
	position relative
	&-single
		width 31px
		height 31px
		background-size 31px 31px
	&-figure
		width 76px
		height 76px
		background-size 28px 28px
		background-position left 22px top 29px
		background-color $basic-white-color
		box-shadow 0px 0px 20px rgba(37, 75, 172, 0.08)
		border-radius 37px 37px 37px 5px
		

			
.ic-block
	font-size 15px
	line-height 140%
	.ic
		margin-bottom 15px
	&__title
		font 24px $Bold
		color $basic-black-color
		margin-bottom 7px
		line-height 150%
		

.ic-link
	display inline-block
	position relative
	padding-left 21px
	color $basic-white-color 
	font 14px $SFReg
	letter-spacing -0.408px
	&__ic
		display inline-block
		position absolute
		left 0
		vertical-center()
		width 14px
		height 14px
		
	&:hover
		color $accent-color
		svg
			fill $accent-color
		
	svg
		svg()
		fill $basic-white-color
		

// Masks

.mask-block
	overflow hidden
	width 100%
	position absolute
	top 0
	left 0
	z-index -1

	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
		
	&__chat
		mask url('../img/decor/masks/desktop/chat-mask.svg')
		height 570px
		mask-size cover
		mask-repeat no-repeat
		
		
	&__join-as-fan
		mask url('../img/decor/masks/desktop/adult-show-mask.svg')
		height 514px
		mask-size cover
		mask-repeat no-repeat
		
		
			
	&__earnings
		mask url('../img/decor/masks/desktop/earnings-mask.svg')
		height 514px
		mask-size cover
		mask-repeat no-repeat
		
		
.sect-entry
	position relative
	.container
		position relative
		z-index 2
	&__chat
		padding 200px 0 145px
		
		.sect-title
			max-width 190px
			margin-right 50px
			

	&__join-as-fan
		padding 190px 0 170px
		
	&__earnings
		padding 165px 0
		

.socials
	font-size 0
	height 20px
	&__item
		display inline-block
		margin-right 10px
		&:last-child
			margin-right 0
	&__link
		display block
		width 20px
		height 20px
		&--ic
			display block
			width 100%
			height 100%
		svg
			svg()
			fill $basic-white-color
		&:hover
			svg
				fill #B1BCE1