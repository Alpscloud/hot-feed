.footer
	background url('../img/backgrounds/footer-bg-figure.svg') top center no-repeat / cover

	padding 210px 0 75px
	color rgba($basic-white-color, .8)
	position relative
	&:before
		pseudo()
		position absolute
		top 0
		margin-top -2px
		horisontal-center()
		width 100%
		height 170px
		background url('../img/decor/footer-wave.svg') 50% 50% no-repeat / cover
		z-index 1
	&__container
		max-width 810px
		margin 0 auto
	&__row
		margin-bottom 60px

	.socials
		margin 30px 0 35px
	.logo
		color $basic-white-color
	
		font-size 14px
		text-transform uppercase
		img
			max-width 23px
			margin-right 12px
			
	&-col
		&__title
			font-size 14px
			font-bold()
			margin-bottom 15px
			
	&-link
		color inherit
		font-size 14px
		&:hover
			color #B1BCE1
			

.copyright
	font-size 13px 
	color rgba($basic-white-color, .28)
	padding-top 22px
	margin-top 15px
	border-top 1px solid rgba($basic-white-color, 0.04)

.disclaimer
	color $light-text-color
	font-size 13px
	b, strong
		color $basic-white-color
		font-med()